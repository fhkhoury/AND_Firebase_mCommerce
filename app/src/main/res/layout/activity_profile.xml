<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fiftyfive.and_firebase_mcommerce.Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="My profile"/>

    <ImageView
        android:id="@+id/userPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/promo_banner"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My name"
        android:textSize="18sp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/userOrderList"
        android:layout_alignStart="@+id/userAdress" />


    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My email"
        android:textSize="18sp"
        android:layout_above="@+id/userOrderList"
        android:layout_marginBottom="18dp"
        android:layout_below="@+id/userName" />

    <TextView
        android:id="@+id/userAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Adress"
        android:textSize="18sp"
        android:layout_below="@+id/userPicture"
        android:layout_toStartOf="@+id/disconnect"
        android:layout_marginTop="22dp" />

    <ListView
        android:id="@+id/userOrderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPicture"
        android:layout_alignParentStart="true"
        android:layout_marginTop="102dp" />

    <Button
        android:id="@+id/disconnect"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginBottom="19dp"
        android:background="@android:color/holo_purple"
        android:text="Sign off"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="219dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>